<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MyLittleWidget.Contracts.AppShortcut.AppShortcutContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyLittleWidget.Contracts.AppShortcut"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    AllowDrop="True"
    Drop="AppShortcutContent_Drop"
    DragOver="AppShortcutContent_DragOver"
    PointerReleased="AppShortcutContent_PointerReleased">
    <Grid Background="Transparent"       HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
        <Image x:Name="AppIconImage"
                   Stretch="Uniform"
                   Source="{x:Bind AppData.AppDisplayIcon}"
          HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch" />
    </Grid>
</UserControl>